{
  "name": "rest-api-nodejs-typescript-cms",
  "version": "1.0.0",
  "description": "A full and advanced rest api for cms created by nodejs, typescript and mongodb",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run server",
    "server": "node -r dotenv/config build/server.js",
    "build": "npm run clean && npm run build-ts",
    "watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "upgrade": "npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaoofJM/rest-api-nodejs-typescript-cms.git"
  },
  "author": "RaoofJM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RaoofJM/rest-api-nodejs-typescript-cms/issues"
  },
  "homepage": "https://github.com/RaoofJM/rest-api-nodejs-typescript-cms#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/newrelic__winston-enricher": "^0.1.1",
    "@types/node": "^20.1.4",
    "@types/nodemailer": "^6.4.8",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "colors": "^1.4.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "newrelic": "^10.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
