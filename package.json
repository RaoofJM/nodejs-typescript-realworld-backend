    "cryptojs": "^2.5.3",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.1.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "nodemailer-smtp-transport": "^2.7.4",
    "redis": "^4.6.6",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
